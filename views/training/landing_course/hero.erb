<section id="course-hero">
  <div class="row h-100">
    <div class="col-md-9 course-hero__text">
      <div class="course-hero__flag">
        <p>
          <img src="/app/img/icons/VideoCamera.svg">
          Online
        </p>
      </div>
      <h1><%= @event_type.name %></h1>
      <p><%= @event_type.subtitle %></p>
    </div>
    <div class="col-md-3 course-hero__button">
      <a href="#course-next-editions">
        <strong>Ver fechas</strong>
        <img src="/app/img/view_figures/rustic_arrow2.svg"/>
      </a>
    </div>
  </div>

  <img src="/app/img/view_figures/yellow_oval.svg" class="desktop_figure course-hero__yellow-oval" />
  <img src="/app/img/view_figures/red_bean.svg" class="desktop_figure course-hero__red-bean" />
  <img src="/app/img/view_figures/rustic_worm.svg" class="desktop_figure course-hero__rustic-worm" />


</section>
