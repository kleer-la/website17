<section id="course-related" class="mt-5 mb-5">
  <div class="container">
    <h2 class="mb-5 text-center common-subtitle"><%= t('recommended.title')%></h2>
    <div class="row">
        <% recommended.each  do |item|%>
        <div class="col-3">
          <%= erb :'component/cards/_recommended_card', locals: {item: item}  %>
        </div>
        <% end %>
    </div>
  </div>
</section>

  <section id="mobile-course-related">
    <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
      <div class="carousel-inner">
        <%
          active = [false] * recommended.count
          active[0] = true
          recommended.each_with_index do |item, idx|
        %>
          <div class="carousel-item ps-5 <%= active[idx] ? 'active' : '' %>" style="padding-left: 50px">
              <%= erb :'component/cards/_recommended_card', locals: {item: item}  %>
          </div>
        <%end %>
      </div>
      <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>
  </section>
