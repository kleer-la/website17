<div class="col-12 col-md-6 col-lg-2 mb-4">
<% path = {'es'=> 'es/servicios', 'en'=> 'en/services'}[session[:locale]] %>
  <a 
    href="<%= area.slug ? "/#{path}/#{area.slug}" : "#" %>"
    class="card service-area-card text-center text-decoration-none h-100"
    style="background-color: <%= area.primary_color %>; color: white;"
  >
    <div class="card-body p-3">
      <!-- Icon with secondary color background -->
      <div 
        class="icon-container mb-3 mx-auto" 
        style="background-color: <%= area.secondary_color %>; width: 60px; height: 60px; border-radius: 50%; display: flex; align-items: center; justify-content: center;"
      >
        <img 
          src="<%= area.icon %>" 
          alt="<%= area.name %> icon" 
          class="icon" 
          style="width: 30px; height: 30px;" 
          loading="lazy"
        />
      </div>
      <h3 class="card-title" style="font-size: 1.1rem;"><%= area.name %></h3>
    </div>
  </a>
</div>