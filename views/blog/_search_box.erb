<!--          <button-->
<!--            class="btn btn-outline-secondary bg-white border-start-0 border ms-n5"-->
<!--            type="button"-->
<!--            onclick="goToFilterLink()">-->
<!--            <i class="fa fa-search"></i>-->
<!--          </button>-->
<!--        </span>-->
      </div>
    </div>
    <div class="offset-8 offset-md-9  offset-lg-0 col-lg-2">
      <button class="blue-link" >
        <%=t("blog.search.reset")%>
      </button>
    </div>
  </div>
</div>
