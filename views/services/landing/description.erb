<section id="course-description" class="container">
      <div class="row">
        <div class="col-md-6">
          <%=@markdown_renderer.render( @service.description )%>
        </div>
        <div class="col-md-6 ps-5 pe-5">
          <%if @service.side_image.to_s == ''%>
            <img src="/img/generics/description_generic.png"/>
          <% else %>
            <img src="<%= @service.side_image%>"/>
          <% end %>
        </div>
      </div>
  <div class="">
    <% if @service.sub_services %>
      <% @service.sub_services.each do |sub_service| %>
        <%= erb :'services/landing/_subservice_item',
                locals: {name: sub_service["name"],
                         icon: '/app/img/icons/Strategy.svg',
                         href: sub_service["name"].gsub!(/( )/, '_').downcase!} %>
      <% end %>
    <% end %>
  </div>
</section>
