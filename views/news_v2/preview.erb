  <header class="header">
    <h1>Novedades</h1>
  </header>
  <div class="container">
    <% @news.each do |news| %>
      <div class="news-card">
        <img src="<%= news.img || 'https://kleer-images.s3.sa-east-1.amazonaws.com/placeholder.png' %>" alt="<%= news.title %>" class="news-image">
        <div class="news-content">
          <h2><%= news.title %></h2>
          <div class="news-meta">Publicado el <%= news.event_date %> | Autores: <%= news.trainers.count > 0 ? news.trainers.join(', ') : nil %></div>
          <p class="news-excerpt"><%= news.description %></p>
          <a href="<%= news.url %>" class="news-cta">Leer m√°s</a>
        </div>
      </div>
    <% end %>
  </div>
