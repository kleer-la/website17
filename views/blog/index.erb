<% content_for :critical_css do %>
      /* Blog critical styles */
      #blog-feed-hero{background-color:#68CEF2;min-height:300px;display:flex;flex-direction:column;justify-content:center;align-items:center;position:relative}
      .hero-medium{padding:2rem 1rem}
      .blog-card{
        width:22rem;
        margin-bottom:2rem;
        border-radius:12px;
        overflow:hidden;
        box-shadow:0 4px 6px rgba(0,0,0,0.1);
        min-height:400px;
        display:flex;
        flex-direction:column;
      }
      .image-container{
        aspect-ratio:16/9;
        overflow:hidden;
        position:relative;
        background-color:#f8f9fa;
      }
      .card-img-top{
        width:100%;
        height:100%;
        object-fit:cover;
        transition:transform 0.3s ease;
        position:absolute;
        top:0;
        left:0;
      }
      .card-img-top:hover{transform:scale(1.05)}
      .card-body{
        flex:1;
        display:flex;
        flex-direction:column;
        padding:1rem;
      }
      .card-title{
        min-height:3em;
        line-height:1.5;
        margin-bottom:0.75rem;
      }
      /* Mobile responsive */
      @media (max-width:768px){
        #blog-feed-hero{min-height:250px;padding:1rem}
        .blog-card{width:100%;max-width:22rem}
      }
<% end %>

<%= erb :'blog/hero' %>
  <div class="container">
    <div class="row">
      <div id="blog-feed-list" class="container mt-5 mb-5">
        <%= erb :'blog/articles_reactive' %>
      </div>
    </div>
  </div>
