<section id="landing-blog-hero" class="mb-5">
    <a class="go-back-button" href="/<%=session[:locale]%>/blog">
      <img src="/app/img/view_figures/arrow-right.svg" class="back-img"/>
      <%=t("blog.landing.back")%>
    </a>
    <div class="mt-4 mb-5">
      <div class="landing-blog-hero__title-container">
        <h1 ><%= @article.title %></h1>
      </div>
    </div>
    <div class="landing-blog-hero__img-container">
      <img
        src="<%= @article.cover %>"
        class="principal"
        alt=""
      />
      <img src="https://kleer-images.s3.sa-east-1.amazonaws.com/website-assets/yellow_bean.svg" class="desktop_figure yellow-bean"/>
      <img src="https://kleer-images.s3.sa-east-1.amazonaws.com/website-assets/bluered_group.svg" class="desktop_figure bluered-group"/>
    </div>
    <div class="landing-blog-hero__info">
      <p>
        <%=t("blog.landing.published")%>
        <time datetime="<%=@article.created_at[0..9]%>">
          <%=@article.created_at[0..9]%>
        </time>
      </p>
    </div>
</section>
