<form action="/send-mail" method="post">
  <div class="row">
    <div class="mb-3 col-xs-12">
      <label for="exampleInputEmail1" class="form-label">Tu nombre completo</label>
      <input
        type="text"
        class="form-control"
        name="name">
    </div>
  </div>
  <div class="row">
    <div class="mb-3 col-xs-12 col-md-6">
      <label for="exampleInputEmail1" class="form-label">Correo electronico</label>
      <input
        type="email"
        class="form-control"
        name="email">
    </div>
    <div class="mb-3 col-xs-12 col-md-6">
      <label for="exampleInputEmail1" class="form-label">Número de teléfono</label>
      <input
        type="text"
        class="form-control"
        id="exampleInputEmail1"
        name="phone">
    </div>
  </div>

