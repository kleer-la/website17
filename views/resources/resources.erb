
<div class="container">
  <div class="row">
    <%
      locale = session[:locale].to_sym
      @resources.filter { |r| r.lang == locale}.each do |resource|
        @id = resource.id
        @image_cover = resource.cover
        @landing = resource.landing
        @title = resource.title
        @description = resource.description
        @comments = resource.comments
        @authors = resource.authors
        @translators = resource.translators
        # @fb_share = resource['share_fb']
        # @tw_share = resource['share_tw']
        # @li_share = resource['share_li']
    %>
      <div class="col-12 col-md-6 col-lg-4">
        <%=erb :'component/_generic_card' %>
      </div>
    <%end%>
  </div>
</div>
