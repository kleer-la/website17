<section id="landing-blog-hero" class="mb-5">
    <a class="go-back-button" href="/blog2022">
      <img src="https://kleer-images.s3.sa-east-1.amazonaws.com/website-assets/rustic_arrow2.svg"/>
       Volver al Feed
    </a>
    <div class="mt-4 mb-5">
      <div class="landing-blog-hero__title-container">
        <h1 ><%= @article.title %></h1>
      </div>
    </div>
    <div class="landing-blog-hero__img-container">
      <img
        src="<%= @article.cover %>"
        class=""
        alt=""
      >
    </div>
    <div class="landing-blog-hero__info">
      <p>
        Publicado el
        <time datetime="<%=@article.created_at[0..9]%>">
          <%=@article.created_at[0..9]%>
        </time>
      </p>
    </div>
    <div class="landing-blog-hero__summary">
      <p>
        <%= @article.description %>
      </p>
    </div>
</section>
