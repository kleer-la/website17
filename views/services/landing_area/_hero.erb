<section
  class="area-hero"
  style="background: linear-gradient(<%= @primary_color %>, <%= @secondary_color %>, white)"
>
  <div class="text-container">
    <h1><%= service_area.name %></h1>
    <p><%= service_area.subtitle %></p>
  </div>

  <div class="area-cards">
    <% service_area.services.each_with_index  do |service, index| %>
      <%= erb :'services/components/_service_card',
              locals: {
                service: service,
                hover_color: @primary_color,
                border_color: @primary_color,
                border_hover_color: "white",
                id: service_area.id
              } %>
    <% end %>
  </div>

  <object
    class="icon big"
    type="image/svg+xml"
    data="<%= service_area.icon %>"
    ></object>

  <object
    class="icon small"
    type="image/svg+xml"
    data="<%= service_area.icon %>"
  ></object>
</section>