<div class="blackBg">
<div class="header-small header-coaching"></div>

<div class="header-description">
	<h1 class="headerTitle"><%= @where%></h1>
</div>
</div>
<%where_uri= "/#{@where.downcase.gsub(' ','-')}/" %>

<div class="container mainContent clientes">
	<div class="container fondo-blanco contenedor-generico">
		<div class="col-md-9 contenedor-main-izq">
    <%if @articles.nil? || @articles == [] %>
      <h2>En construcci√≥n</h2>
    <% else
      @articles.each do |article|%> 
      <article>
      <header>
      <h1><a href='<%= where_uri+article.slug%>'>
      <%=article.title%>
      </a></h1>
      <div style="color:black;font-weight: bold;font-variant: small-caps;font-size: 1.5em;">
      <i class="fa fa-user"></i>
      <%=article.trainers.join(' & ')%>
      <i class="fa fa-calendar"></i>
      <time datetime="<%=article.created_at[0..9]%>">
      <%=article.created_at[0..9]%>
      </time>
      </div>
      </header>
      <%=@markdown_renderer.render( @show_abstract ? article.abstract : article.body)%>
      </article>
    <%end
    end%>
		</div>
		<div class="col-md-3 hidden-xs hidden-sm">
      <%# navigation			 %>
		</div>
	</div>
</div>
