<div class="container p-3 blog-feed__search-box">
  <div class="row search-box__container">
    <div class="col-12 col-lg-3">
      <div class="dropdown">
        <a
          class="btn dropdown-toggle ps-0"
          href="#" role="button"
          data-bs-toggle="dropdown"
          aria-expanded="false"
          id="blog-feed__category-drop"
        >
          <%=t("blog.search.category")%>
        </a>
        <ul class="dropdown-menu">
          <%@categories&.each do |category|
            #TODO: delete
            url = ERB::Util.url_encode(category.name)%>
            <li>
              <button
                class="dropdown-item"
                onclick="filterByCategory('<%=category.name%>')">
                <%=category.name%>
              </button>
            </li>
          <% end%>
        </ul>
      </div>
    </div>
    <div class="col-12 col-lg-7">
      <div class="input-group">
        <input
          class="form-control border"
          type="input"
          name="matchWord"
          value="<%= @match || '' %>"
          oninput="filterByText(event)"
          id="blog-feed__text-input" />
