<div class="blackBg">
	<div class="header-small header-publicamos"></div>

	<div class="header-description">
		<h1 class="headerTitle">Blog</h1>
	</div>
</div>

<div class="vSpace"></div>


<div class="container mainContent blogContent">

	<div class="col-md-9 contenedor-main-izq">

		<% @rss.items.first(20).each do |item| %>
			<!-- Resuelvo potenciales diferencias de serializaciÃ³n (por ahora, Blogger) -->
			<% content = item.description unless item.description.nil? %>
			<% content = item.content_encoded unless item.content_encoded.nil? %>

			<div class="container-fluid">
				<h3><a href="<%= item.link %>"><%= item.title %></a></h3>
				<p><%= item.pubDate.strftime("%d/%m/%Y") %> -
					<a href="<%= item.source.url %>"><%= item.source %></a>
			</div>
			<div class="container-fluid">
				<%= EscapeUtils.unescape_html content %>
			</div>
		<% end %>
	</div>


	<div class="col-md-3">
		<%= erb :_twitter_widget, :layout => false %>
	</div>
</div>

<script type="text/javascript" src="/js/jquery.js"/></script>
<script type="text/javascript" src="/js/jquery.zrssfeed.min.js"/></script>
