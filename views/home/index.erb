<% content_for :critical_css do %>
      /* Critical hero section styles */
      #hero{max-width:100vw;position:relative;overflow:hidden}
      .hero_carousel-inner{height:calc(100vh - 100px);min-height:600px}
      .carousel__text{display:flex;flex-direction:column;justify-content:space-around;padding:8% 10% 15%}
      .carousel__text h1{font-size:3rem;line-height:1.2;margin-bottom:1rem;font-weight:700}
      .carousel__text h2{font-size:2.5rem;line-height:1.2;margin-bottom:1rem;font-weight:700}
      .carousel__text p{font-size:1.2rem;line-height:1.6;margin-bottom:2rem}
      .hero__img-container{display:flex;align-items:center;justify-content:center}
      .hero__img{max-width:100%;height:auto;object-fit:contain}
      /* Mobile button layout shift prevention */
      .hero__mobile-button{display:none!important;height:50px;margin-bottom:50px;visibility:hidden}
      .hero__desktop-button{display:inline-block}
      /* Mobile responsive */
      @media (max-width:768px){
        .hero_carousel-inner{height:calc(100vh - 80px);min-height:500px}
        .carousel__text{padding:5% 5% 10%}
        .carousel__text h1{font-size:2.5rem}
        .carousel__text h2{font-size:2rem}
        .hero__desktop-button{display:none!important}
        .hero__mobile-button{display:flex!important;visibility:visible!important;margin:auto;margin-bottom:50px;min-height:50px;width:auto;align-items:center;justify-content:center}
      }
<% end %>

