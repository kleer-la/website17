<section id="service-recipients" class="recipients container mt-5">
  <div class="row">
    <div class="col-md-6">
      <img src="/img/generics/recipients_generic.webp" loading="lazy"/>
    </div>
    <div class="col-md-6">
      <h3 class="mb-4 text-left common-subtitle">
        <% if @service.titles %>
          <%=  @service.titles[1] %>
        <% else %>
          ¿A quién está dirigido el <%=  @service.name %>?
        <% end %>
      </h3>
      <%=@markdown_renderer.render( @service.recipients )%>
    </div>
  </div>
</section>
