<% unless @testimonies == []%>
  <section id="course-testimonies" class="">
    <h2 class="mb-5 text-center common-subtitle">Testimonios de nuestros participantes</h2>
    <div class="testimonies-container">
      <% @testimonies.each do |testimony| %>
        <div class="testimony-container">
          <div class="testimony-info">
            <strong><%= "#{testimony.name} #{testimony.last_name}" %></strong>
          </div>
          <div class="testimony-message">
            "<%= testimony.message %>"
          </div>
        </div>
      <% end %>
    </div>
  </section>
<% end %>


