    <script>
        // Critical navbar scroll functionality - inline for immediate execution
        document.addEventListener('DOMContentLoaded', function() {
            const navbar = document.getElementById('navbar');
            const body = document.getElementById('body');
            
            function scrolling() {
                if (body.getBoundingClientRect().top < 0) {
                    navbar.classList.add("navbar-scrolled");
                } else {
                    navbar.classList.remove("navbar-scrolled");
                }
            }
            
            // Add scroll event listener with passive for better performance
            window.addEventListener('scroll', scrolling, { passive: true });
        });
        
        // Flash messages
        <%= flash[:notice] ? "alert('#{flash[:notice]}')" : "" %>
        <%= flash[:error] ? "alert('#{flash[:error]}')" : "" %>
    </script>
