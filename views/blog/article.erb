<section id="blog-hero">
<div class="container">
  <div class="row">
    <div class="breadcrumb-nav"><%= @where%> / <span><%= t("blog.article") %></span></div>
  </div>
</div>
</section>
<div class="container mainContent blog blog-uniq">
	<div class="container fondo-blanco contenedor-generico">
		<div class="col-md-8 col-md-offset-2 contenedor-main-izq">
      <article class="blog__article">
        <h1><%= @article.title%></h1>
        <div class="blog__data">
          <div class="blog__name">
            <i class="fa fa-user"></i>
            <%=@article.trainers.join(' & ')%>
          </div>
          <div class="blog__date">
            <i class="fa fa-calendar"></i>
            <time datetime="<%=@article.created_at[0..9]%>">
              <%=@article.created_at[0..9]%>
            </time>
          </div>
        </div>
        <div class="blog__body"><%=@markdown_renderer.render( @article.body )%></div>
        <a href="<%="/#{session[:locale]}/blog"%>" class="btn btn-info btn-kleer"><%=t('blog.back')%></a>
      </article>
		</div>
		</div>
	</div>
</div>
