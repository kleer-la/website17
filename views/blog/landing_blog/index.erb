<%
  require 'nokogiri'

  titles = extract_titles(@article.body)

  body = set_ids_in_body(@markdown_renderer.render( @article.body ), titles)
%>
<article id="landing-blog">
  <%= erb :'blog/landing_blog/hero' %>
  <%= erb :'blog/landing_blog/body', locals: {titles: titles, body: body, recommended: @article.recommended} %>
  <%= erb :'component/sections/recommended', locals: { recommended: @article.recommended, title: t('recommended.title') }%>
</article>
