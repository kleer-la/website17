<% content_for :critical_css do %>
      /* Blog post critical styles */
      #landing-blog{display:flex;flex-direction:column;max-width:1200px;margin:100px auto 70px auto;position:relative}
      #landing-blog-hero h1{font-weight:600;font-size:56px;line-height:64px}
      .landing-blog-hero__img-container{width:100%;display:flex;justify-content:center;position:relative;margin-bottom:20px;margin-top:20px;aspect-ratio:7/3}
      .landing-blog-hero__img-container .principal{width:100%;max-height:600px;max-width:1400px;object-fit:cover;border-radius:20px}
      #landing-blog-body{width:100%}
      #landing-blog-body .blog__body{margin-left:auto;width:65%;float:right;text-align:justify;padding-right:10px}
      #landing-blog-content-table{width:316px;height:430px;float:left;overflow-y:auto;box-shadow:0 18px 76px rgba(51,51,51,0.1);border-radius:16px;background-color:#fff;padding:30px}
      .go-back-button{margin-bottom:32px;margin-top:32px;font-weight:400;font-size:16px;line-height:18px}
<% end %>

<article id="landing-blog">
  <%= erb :'blog/landing_blog/hero' %>
  <%= erb :'blog/landing_blog/body', locals: {titles: titles, body: body} %>
  <%= erb :'component/sections/recommended', locals: { recommended: @article.recommended, title: t('recommended.title') }%>
</article>
