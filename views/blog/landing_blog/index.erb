<%
  titles = extract_titles(@article.body)
  body = set_ids_in_body(@markdown_renderer.render( @article.body ), titles)
%>

<article id="landing-blog">
  <%= erb :'blog/landing_blog/hero' %>
  <%= erb :'blog/landing_blog/body', locals: {titles: titles, body: body} %>
  <%= erb :'blog/landing_blog/related_blogs' %>
  <%= erb :'component/sections/related_courses' %>
  <%= erb :'component/sections/related_articles' %>
</article>
