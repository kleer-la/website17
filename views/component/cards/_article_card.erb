<% 
lazy_load = defined?(lazy_load) ? lazy_load : true
where_uri = "/#{session[:locale]}/#{@where.to_s.downcase.gsub(' ','-')}/" 
%>
<article
  id="card<%= article.selected ? '-selected' : '' %>--<%="#{format_categories([article.category_name])}#{article.slug}"%>"
  class="card blog-card mb-5 ms-auto me-auto"
  style="width: 22rem;">
  <div class="image-container" style="aspect-ratio: 16/9;">
    <a href="<%= where_uri + article.slug %>">
      <img src="<%= article.cover %>" 
           class="card-img-top" 
           alt="<%= "#{article.title} - #{article.category_name}" %>"
           width="352"
           height="198"
           style="object-fit: cover; width: 100%; height: 100%;"
           <%= 'loading="lazy"' if (lazy_load and not article.selected) %>
           <%= 'fetchpriority="high"' if (!lazy_load and not article.selected) %>
           decoding="async">
    </a>
    <div class="category-flag me-3">
      <%= article.category_name %>
    </div>
  </div>
  <div class="card-body">
    <a href="<%= where_uri + article.slug %>">
      <h3 class="card-title"><%= article.title %></h3>
    </a>
    <p class="card-text">
      <%= @markdown_renderer.render(article.description) %>
    </p>
    <p class="card-text">
      <small class="text-muted">
        <%= erb :'component/cards/_authors_block', locals: { authors: article.trainers } if article.trainers.count>0%>
      </small>
    </p>
    <p class="card-text">
      <small class="text-muted">
        <img src="/img/icons/blue_calendar.svg"
          alt=""
          class="little-icon me-2"
          loading="lazy"
          width="16"
          height="16"
        />
        <time datetime="<%= article.substantive_change_at[0..9] %>">
          <%= article.substantive_change_at[0..9] %>
        </time>
      </small>
    </p>
  </div>
</article>