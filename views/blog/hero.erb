<section id="blog-feed-hero" class="hero-medium mb-5">
  <h1><%=t("blog.title")%></h1>
  <h2 class="hero__subtitle mt-3">
    <%=t("blog.subtitle")%>
  </h2>
  <%= erb :'blog/_search_box' unless session[:locale] == 'en' %>

  <img
    class="desktop_figure blog-hero__rustic-asterisk"
    src="https://kleer-images.s3.sa-east-1.amazonaws.com/website-assets/rustic_asterisk.svg"
    alt="decoration figure"
    />
  <img
    class="blog-hero__yellow_middle_circle"
    src="https://kleer-images.s3.sa-east-1.amazonaws.com/website-assets/yellow_middle_circle.svg"
    alt="decoration figure"
    />
  <img
    class="blog-hero__green-bean-sg"
    src="https://kleer-images.s3.sa-east-1.amazonaws.com/website-assets/green_bean_sg.svg"
    alt="decoration figure"
    />
</section>
