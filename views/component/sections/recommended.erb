<% unless recommended.empty? %>
<div id="recommendedContent">
  <section class="mt-5 mb-5">
    <div class="container">
      <% subtitle = nil unless defined?(subtitle) %>
      <% unless title.nil? %>
        <h2 class="<%= 'mb-5 text-center' if subtitle.nil? %> common-subtitle"><%= title || t('recommended.title') %></h2>
      <% end %>
      <% unless subtitle.nil? %>
        <p><%= subtitle %></p>
      <% end %>
      <div class="d-none d-md-block">
        <div class="row g-4">
          <% recommended.each do |item| %>
            <div class="col-12 col-md-6 col-lg-3">
              <%= erb :'component/cards/_recommended_card', locals: { item: item } %>
          </div>
        <% end %>
        </div>
      </div>
      <!-- Mobile Carousel -->
      <div class="d-block d-md-none">
        <div id="recommendedCarousel" class="carousel slide" data-bs-ride="carousel">
          <div class="carousel-inner">
            <% recommended.each_with_index do |item, index| %>
              <div class="carousel-item <%= 'active' if index == 0 %>">
                <%= erb :'component/cards/_recommended_card', locals: { item: item } %>
              </div>
            <% end %>
          </div>
          <button class="carousel-control-prev" type="button" data-bs-target="#recommendedCarousel" data-bs-slide="prev">
            <span class="carousel-control \n            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#recommendedCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
        </div>
      </div>
    </div>
  </section>
</div>
<% end %>